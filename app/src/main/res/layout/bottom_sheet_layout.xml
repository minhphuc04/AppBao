<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/txtChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Tùy chỉnh" />

    <LinearLayout
        android:id="@+id/layoutEdit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Kiểu chữ"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:id="@+id/editFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            >

            <Button
                android:id="@+id/fontSF"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="SF San-serif"
                android:textSize="16dp"
                android:background="@drawable/bg_left"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp" />

            <Button
                android:id="@+id/fontBookerly"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="Bookerly"
                android:textSize="16dp"
                android:background="@drawable/bg_right" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
